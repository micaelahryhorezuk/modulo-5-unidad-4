<section class="holder">
    <div style="display: flex; align-items: center; justify-content: center;">
        <form action="/login" method="POST" style="width: 50vw;" class="card mb-3 shadow p-3 mb-5 bg-white rounded">
            <div class="mb-3">
                <label for="username-label" class="form-label">Usuario</label>
                <input type="text" class="form-control" name="username">
            </div>
            <div class="mb-3">
                <label for="password-label" class="form-label">Password</label>
                <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary">
                Ingresar
            </button>
            {{#if error}}
            <div class="alert alert-danger mt-3" role="alert">
                {{error}}
            </div>
            {{/if}}
        </form>
    </div>
</section>